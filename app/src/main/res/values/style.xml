<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style Splash TextView -->
    <style name="TextViewTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Style Home Fragment -->
    <style name="HomeTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style About Fragment -->
    <style name="AboutTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Style Colors White Generic Fragment -->
    <style name="ColorsWhiteGenericTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Style Colors Black Generic Fragment -->
    <style name="ColorsBlackGenericTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>