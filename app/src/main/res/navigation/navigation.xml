<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.colorpallet.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.colorpallet.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_colorBlackFragment"
            app:destination="@id/colorBlackFragment" />
        <action
            android:id="@+id/action_homeFragment_to_colorGrayFragment"
            app:destination="@id/colorGrayFragment" />
        <action
            android:id="@+id/action_homeFragment_to_colorYellowFragment"
            app:destination="@id/colorYellowFragment" />
        <action
            android:id="@+id/action_homeFragment_to_colorBlueFragment"
            app:destination="@id/colorBlueFragment" />
        <action
            android:id="@+id/action_homeFragment_to_colorRedFragment"
            app:destination="@id/colorRedFragment" />
        <action
            android:id="@+id/action_homeFragment_to_colorGreenFragment"
            app:destination="@id/colorGreenFragment" />
        <action
            android:id="@+id/action_homeFragment_to_colorPurpleFragment"
            app:destination="@id/colorPurpleFragment" />
        <action
            android:id="@+id/action_homeFragment_to_colorOrangeFragment"
            app:destination="@id/colorOrangeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_colorPinkFragment3"
            app:destination="@id/colorPinkFragment3" />
        <action
            android:id="@+id/action_homeFragment_to_colorBrownFragment"
            app:destination="@id/colorBrownFragment" />
        <action
            android:id="@+id/action_homeFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/colorBlackFragment"
        android:name="com.example.colorpallet.ui.colors.ColorBlackFragment"
        android:label="fragment_color_black"
        tools:layout="@layout/fragment_color_black" />
    <fragment
        android:id="@+id/colorGrayFragment"
        android:name="com.example.colorpallet.ui.colors.ColorGrayFragment"
        android:label="fragment_color_gray"
        tools:layout="@layout/fragment_color_gray" />
    <fragment
        android:id="@+id/colorYellowFragment"
        android:name="com.example.colorpallet.ui.colors.ColorYellowFragment"
        android:label="fragment_color_yellow"
        tools:layout="@layout/fragment_color_yellow" />
    <fragment
        android:id="@+id/colorBlueFragment"
        android:name="com.example.colorpallet.ui.colors.ColorBlueFragment"
        android:label="fragment_color_blue"
        tools:layout="@layout/fragment_color_blue" />
    <fragment
        android:id="@+id/colorRedFragment"
        android:name="com.example.colorpallet.ui.colors.ColorRedFragment"
        android:label="fragment_color_red"
        tools:layout="@layout/fragment_color_red" />
    <fragment
        android:id="@+id/colorGreenFragment"
        android:name="com.example.colorpallet.ui.colors.ColorGreenFragment"
        android:label="fragment_color_green"
        tools:layout="@layout/fragment_color_green" />
    <fragment
        android:id="@+id/colorPurpleFragment"
        android:name="com.example.colorpallet.ui.colors.ColorPurpleFragment"
        android:label="fragment_color_purple"
        tools:layout="@layout/fragment_color_purple" />
    <fragment
        android:id="@+id/colorOrangeFragment"
        android:name="com.example.colorpallet.ui.colors.ColorOrangeFragment"
        android:label="fragment_color_orange"
        tools:layout="@layout/fragment_color_orange" />
    <fragment
        android:id="@+id/colorPinkFragment3"
        android:name="com.example.colorpallet.ui.colors.ColorPinkFragment"
        android:label="fragment_color_pink"
        tools:layout="@layout/fragment_color_pink" />
    <fragment
        android:id="@+id/colorBrownFragment"
        android:name="com.example.colorpallet.ui.colors.ColorBrownFragment"
        android:label="fragment_color_brown"
        tools:layout="@layout/fragment_color_brown" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.colorpallet.ui.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" >
        <action
            android:id="@+id/action_aboutFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>